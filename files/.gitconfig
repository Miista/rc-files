[alias]
    pull = pull --ff-only
    ba = branch --all
    fap = fetch --all --prune
    ci = commit
    co = checkout
    st = status
    sci = svn dcommit
    sup = svn rebase
    wdiff = diff --word-diff

[color]
    ui = true
    log = auto
    diff = auto
    branch = auto

[tig]
    show-date = local

[merge]
	tool = vimdiff
